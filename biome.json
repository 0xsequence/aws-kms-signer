{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsoleLog": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useShorthandArrayType": "off",
        "noUselessElse": "off",
        "noUnusedTemplateLiteral": "off",
        "useSingleVarDeclarator": "off",
        "noParameterAssign": "off",
        "useTemplate": "off",
        "noShoutyConstants": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "files": {
    "ignore": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}